<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- selected -->
    <item android:state_selected="true" >
        <shape>
            <gradient
                android:startColor="@color/color_gray_light"
                android:endColor="@color/color_gray_light"
                android:angle="270" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/color_gray_light"
                android:endColor="@color/color_gray_light"
                android:angle="270" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <!-- default state -->
    <item>
        <shape>
            <gradient
                android:startColor="@color/color_white"
                android:endColor="@color/color_white"
                android:angle="270" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>
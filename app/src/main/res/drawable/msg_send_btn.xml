<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/record_second"/>
            <padding
                android:left="8dp"
                android:top="2dp"
                android:right="8dp"
                android:bottom="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/record_first"/>
            <padding
                android:left="8dp"
                android:top="2dp"
                android:right="8dp"
                android:bottom="2dp"/>
        </shape>
    </item>
</selector>
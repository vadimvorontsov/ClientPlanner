<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true" >
        <!-- selected -->
        <shape>
            <solid android:color="@color/procedure_second"/>
            <padding
                android:left="@dimen/main_activity_items_padding"
                android:top="@dimen/main_activity_items_padding"
                android:right="@dimen/main_activity_items_padding"
                android:bottom="@dimen/main_activity_items_padding" />
        </shape>
    </item>

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/procedure_second"/>
            <padding
                android:left="@dimen/main_activity_items_padding"
                android:top="@dimen/main_activity_items_padding"
                android:right="@dimen/main_activity_items_padding"
                android:bottom="@dimen/main_activity_items_padding" />
        </shape>
    </item>

    <!-- default state -->
    <item>
        <shape>
            <solid android:color="@color/procedure_first"/>
            <padding
                android:left="@dimen/main_activity_items_padding"
                android:top="@dimen/main_activity_items_padding"
                android:right="@dimen/main_activity_items_padding"
                android:bottom="@dimen/main_activity_items_padding" />
        </shape>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true" >
        <!-- selected -->
        <shape>
            <gradient
                android:startColor="@color/record_second"
                android:endColor="@color/record_second"
                android:angle="270" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/record_second"
                android:endColor="@color/record_second"
                android:angle="270" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <!-- default state -->
    <item>
        <shape>
            <gradient
                android:startColor="@color/record_first"
                android:endColor="@color/record_first"
                android:angle="270" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

</selector>
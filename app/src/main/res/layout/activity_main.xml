<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.anroidapp.plannerwork.MainActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <!--
    <Button
        android:id="@+id/btn1"
        android:onClick="onBtn1Click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Запись процедуры" />

    <Button
        android:id="@+id/btn2"
        android:onClick="onBtn2Click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Календарь" />
        -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/selected_record"
            android:onClick="onBtn1Click"
            android:layout_weight="1">

            <ru.anroidapp.plannerwork.CircularImageView
                android:id="@+id/cntctImg1"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_record"
                app:border="true"
                app:border_color="@color/record_second"
                app:shadow="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="11pt"
                    android:text="Сделать запись"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Выбор клиента, даты, услуги. \n Отправка сообщения."/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/selected_calendar"
            android:onClick="onBtn2Click"
            android:orientation="horizontal">

            <ru.anroidapp.plannerwork.CircularImageView
                android:id="@+id/cntctImg2"
                android:paddingLeft="8dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_calendar"
                app:border="true"
                app:border_color="@color/calendar_second"
                app:shadow="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="11pt"
                    android:text="Календарь"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Просмотр записей клиентов."/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:onClick="onBtn3Click"
            android:background="@drawable/selected_procedure"
            android:orientation="horizontal">

        <ru.anroidapp.plannerwork.CircularImageView
            android:id="@+id/cntctImg3"
            android:paddingLeft="8dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_procedure"
            app:border="true"
            app:border_color="@color/procedure_second"
            app:shadow="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textSize="11pt"
                android:text="Услуги"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Заполнение процедур их цена и дополнительные примечания."/>
        </LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#d7ccc8">

            <android.support.v4.view.ViewPager
                android:layout_gravity="center"
                android:background="#d7ccc8"
                android:id="@+id/pagerMain"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

        </LinearLayout>

   </LinearLayout>

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.anroidapp.plannerwork.MainActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <!--
    <Button
        android:id="@+id/btn1"
        android:onClick="onBtn1Click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Запись процедуры" />

    <Button
        android:id="@+id/btn2"
        android:onClick="onBtn2Click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Календарь" />
        -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/selected_record"
            android:onClick="onBtn1Click"
            android:layout_weight="1">

            <ru.anroidapp.plannerwork.CircularImageView
                android:id="@+id/cntctImg1"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_record"
                app:border="true"
                app:border_color="#00BCD4"
                app:shadow="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="11pt"
                    android:text="Сделать запись"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Выбор клиента, даты, услуги. \n Отправка сообщения."/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/selected_calendar"
            android:onClick="onBtn2Click"
            android:orientation="horizontal">

            <ru.anroidapp.plannerwork.CircularImageView
                android:id="@+id/cntctImg2"
                android:paddingLeft="8dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_calendar"
                app:border="true"
                app:border_color="#FF9800"
                app:shadow="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="11pt"
                    android:text="Календарь"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Просмотр записей клиентов."/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:onClick="onBtn3Click"
            android:background="@drawable/selected_procedure"
            android:orientation="horizontal">

        <ru.anroidapp.plannerwork.CircularImageView
            android:id="@+id/cntctImg3"
            android:paddingLeft="8dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_procedure"
            app:border="true"
            app:border_color="#E040FB"
            app:shadow="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textSize="11pt"
                android:text="Услуги"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Заполнение процедур их цена и дополнительные примечания."/>
        </LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/white"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"
                        android:orientation="horizontal">
                        <ru.anroidapp.plannerwork.CircularImageView
                            android:paddingLeft="8dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/arni1"
                            app:border="true"
                            app:border_color="#1976d2"
                            app:shadow="true"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#1976d2"
                    android:textSize="18sp"
                    android:text="Иван Велосипедов"
                    android:fontFamily="sans-serif-light"
                    android:layout_centerHorizontal="true" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#1976d2"
                                android:textSize="18sp"
                                android:text="8 августа"
                                android:fontFamily="sans-serif-light"
                                android:layout_centerHorizontal="true" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#1976d2"
                                android:textSize="18sp"
                                android:text="15:30 - 17:30"
                                android:fontFamily="sans-serif-light"
                                android:layout_centerHorizontal="true" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#1976d2"
                                android:textSize="18sp"
                                android:text="Оповещен"
                                android:fontFamily="sans-serif-light"
                                android:layout_centerHorizontal="true" />
                    </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            </LinearLayout>

   </LinearLayout>

</LinearLayout>

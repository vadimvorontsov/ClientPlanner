<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/completion_tab"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Завершение записи"
        android:textColor="@color/ColorPrimary"
        android:textSize="26sp"/>


    <LinearLayout
        android:id="@+id/LayDataAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/data_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/grey_bckgrnd"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BtnCompletionOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn_shakespeare"
                android:onClick="BtnComOK"
                android:text="OK"
                android:layout_weight="1"
                android:textSize="8pt"/>

            <Button
                android:id="@+id/BtnCompletionMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/custom_btn_shakespeare"
                android:onClick="BtnComOK"
                android:text="СООБЩЕНИЕ"
                android:layout_weight="1"
                android:textSize="8pt"/>
        </LinearLayout>

    </LinearLayout>


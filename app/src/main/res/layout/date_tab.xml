<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/date_tab"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/grey_bckgrnd"
            android:orientation="vertical"
            android:id="@+id/LinDateTime"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="дата"
                    android:id="@+id/TextDate"
                    android:textColor="@color/ColorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="время"
                    android:id="@+id/TextTime"
                    android:textColor="@color/ColorPrimary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp" />
                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/grey_bckgrnd"
            android:orientation="vertical"
            android:id="@+id/LinDatePick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выберите дату"
                android:textColor="@color/ColorPrimary"
                android:layout_gravity="center"
                android:textSize="26sp" />

            <DatePicker android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text" />

        </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/grey_bckgrnd"
            android:id="@+id/LinTimePick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите время"
            android:textColor="@color/ColorPrimary"
            android:layout_gravity="center"
            android:textSize="26sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TimePicker android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"
                    android:layout_below="@+id/datePicker"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/cancelLayDate"
            android:orientation="horizontal"
            android:onClick="BtnCancel1Click"
            android:layout_gravity="right"
            android:background="@drawable/drkgrey_bckgrnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_back"/>
            <TextView
                android:paddingLeft="4dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="  ДАТА  "
                android:textSize="10sp"/>

        </LinearLayout>
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="2"
        android:id="@+id/LinDateBtn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="8pt"
            android:onClick="BtnStartTime"
            android:background="@drawable/custom_btn_shakespeare"
            android:id="@+id/BtnDate"
            android:layout_marginTop="20dp" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:text="с"
                android:id="@+id/BtnTimeHour"
                android:background="@drawable/custom_btn_shakespeare"
                android:onClick="BtnTime1"
                android:layout_marginTop="20dp" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="по"
                    android:textSize="8pt"
                    android:id="@+id/BtnTimeMin"
                    android:background="@drawable/custom_btn_shakespeare"
                    android:onClick="BtnTime2"
                    android:layout_marginTop="20dp" />
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout> 
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ru.anroidapp.plannerwork.CircularImageView
        android:id="@+id/nearest_contact_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:paddingLeft="8dp"
        android:src="@drawable/arni1"
        app:border="true"
        app:border_color="@color/viewPagerTextDark"
        app:shadow="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nearest_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:text="Иван Велосипедов"
            android:textColor="@color/viewPagerTextDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nearest_contact_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:text="8 августа"
            android:textColor="@color/viewPagerText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nearest_contact_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:text="15:30 - 17:30"
            android:textColor="@color/viewPagerText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nearest_contact_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:text="Оповещен"
            android:textColor="@color/viewPagerText"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
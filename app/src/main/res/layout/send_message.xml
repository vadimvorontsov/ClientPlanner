<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:padding="@dimen/padding"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/choose_phone_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
       <!-- android:background="@drawable/grey_bckgrnd">-->

        <LinearLayout
            android:id="@+id/choose_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_betw_lay"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/choose_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Телефон: "
                android:textStyle="bold"
                android:textSize="@dimen/header_comment_add_proc"
                android:textColor="@color/color_black_light"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/choose_email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_betw_name"
            android:layout_marginLeft="@dimen/distance_betw_lay"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/choose_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Почта: "
                android:textSize="@dimen/header_comment_add_proc"
                android:textStyle="bold"

                android:textColor="@color/color_black_light"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_msg_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_phone_email_layout"
        android:paddingTop="@dimen/padding_top"
        android:orientation="vertical">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_msg_edit_layout">
       <!-- android:background="@drawable/grey_bckgrnd">-->

        <LinearLayout
            android:id="@+id/sms_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/distance_betw_but"
            android:layout_marginLeft="@dimen/distance_betw_lay"
            android:layout_marginRight="@dimen/distance_betw_lay">

            <TextView
                android:id="@+id/sms_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/sms"
                android:textStyle="bold"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/header_comment_add_proc"/>

            <Button
                android:id="@+id/send_sms_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_send_btn"
                android:text="@string/send"
                android:textColor="@color/color_white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sms_layout"
            android:layout_marginBottom="@dimen/distance_betw_but"
            android:layout_marginLeft="@dimen/distance_betw_lay"
            android:layout_marginRight="@dimen/distance_betw_lay">

            <TextView
                android:id="@+id/email_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/email"
                android:textStyle="bold"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/header_comment_add_proc"/>

            <Button
                android:id="@+id/send_email_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_send_btn"
                android:text="@string/send"
                android:textColor="@color/color_white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/whatsapp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_layout"
            android:layout_marginBottom="@dimen/distance_betw_but"
            android:layout_marginLeft="@dimen/distance_betw_lay"
            android:layout_marginRight="@dimen/distance_betw_lay">

            <TextView
                android:id="@+id/whatsapp_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/whatsapp"
                android:textStyle="bold"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/header_comment_add_proc"/>

            <Button
                android:id="@+id/send_whatsapp_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_send_btn"
                android:text="@string/send"
                android:textColor="@color/color_white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viber_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whatsapp_layout"
            android:layout_marginBottom="@dimen/distance_betw_but"
            android:layout_marginLeft="@dimen/distance_betw_lay"
            android:layout_marginRight="@dimen/distance_betw_lay">

            <TextView
                android:id="@+id/viber_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/viber"
                android:textStyle="bold"
                android:textColor="@color/color_black_light"
                android:textSize="@dimen/header_comment_add_proc"/>

            <Button
                android:id="@+id/send_viber_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_betw_lay"
                android:background="@drawable/msg_send_btn"
                android:text="@string/send"
                android:textColor="@color/color_white"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>